def printinventory() :
## inventory display function 
# Print inventory function header.  
    print("%20s" % "Weponds", "%19s" % "Health", "%17s" % "Misc", "%20s" % "Armour",end="")
    print("\n", "    ", "-" * 77)
    
    #Displays vaules in inventory, sorting them by category 
    n = 0
    while n in range(0, (len(ainventory) )) :  
        
       if n >= len(weaponinventory) :
           print("%16s" % " ", end="")
       else:
           print("     |%14s" % weaponinventory[n], end="") 
     
       if n >= len(healthinventory) :
           print("%20s" % " ", end="")
       else:
           print("%20s" % healthinventory[n], end="")
    
       if n >= len(miscinventory) :
           print("%20s" % " ", end="")
       else:
           print("%20s" % miscinventory[n], end="") 
       
       if n >= len(armourinventory) :
            print("%20s" % " ", end="")
       else:
           print("%20s   |" % armourinventory[n])
       n = n + 1
    print()
##End of inventory display function 
      








