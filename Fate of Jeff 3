ainventory = []

weaponinventory = []
healthinventory = []
miscinventory = []
armourinventory = []
    



#function for updating inventory array
if (gun == "true"):
    if "gun" not in ainventory:
        ainventory.append("gun") 
        
if (knife == "true"):
    if "knife" not in ainventory:
        ainventory.append("knife")
        
if (map == "true"):
    if "map" not in ainventory:
        ainventory.append("map")
        
if (id == "true"):
    if "id" not in ainventory:
        ainventory.append("id")

if (drill == "true"):
    if "drill" not in ainventory:
        ainventory.append("drill")
    
    
    

